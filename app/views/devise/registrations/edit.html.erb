<div class="bg-white dark:bg-gray-900 mt-20 py-10">
  <div class="flex flex-col justify-center items-center">
    <div class="w-full lg:max-w-xl p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow-xl dark:bg-gray-800">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">
        Edit your account.
      </h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mt-8 space-y-6", html: { method: :put }) do |f| %>
        <div class="text-sm font-medium text-yellow-900 dark:text-yellow-300">
          <%= render "devise/shared/error_messages", resource: resource %>
        </div>
        <div class="flex flex-col items-start">
          <%= f.label :first_name, class: "block m-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :first_name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
        <div class="flex flex-col items-start">
          <%= f.label :last_name, class: "block m-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :last_name, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
        <div class="flex flex-col items-start">
          <%= f.label :phone, class: "block m-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :phone, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
        <div class="flex flex-col items-start">
          <%= f.label :dob, "Date of Birth", class: "block m-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.text_field :dob, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
        <div class="flex flex-col items-start">
          <%= f.label :email, class: "block m-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.email_field :email, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
        <div class="flex flex-col items-start">
          <div class="flex items-center">
            <%= f.label :password, class: "block m-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <i class="text-sm font-medium text-gray-900 dark:text-white">(leave alone if you don't want to change it)</i>
          </div>
          <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
        <div class="flex flex-col items-start">
          <%= f.label :confirm_password, class: "block m-2 text-sm font-medium text-gray-900 dark:text-white" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
        <div class="flex flex-col items-start">
          <div class="flex items-center w-full">
            <%= f.label :current_password, class: "block m-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <i class="text-sm font-medium text-gray-900 dark:text-white">
              <small>(we need your current password to confirm your changes)</small>
            </i>
          </div>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" %>
        </div>
        <div class="flex justify-evenly items-center">
          <%= f.submit "Update", class: "w-full my-3 px-5 py-3  text-base font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:ring%-blue-300 sm:w-auto dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
          <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure? This will delete everything!", turbo_confirm: "Are you sure? This will delete everything!" }, method: :delete, class: "w-full my-3 px-5 py-3  text-base font-medium text-center text-white bg-rose-700 rounded-lg hover:bg-red-800 focus:ring-4 focus:ring%-yellow-300 sm:w-auto dark:bg-rose-600 dark:hover:bg-red-700 dark:focus:ring-yellow-800" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
