<div class="bg-white dark:bg-gray-900 mt-20 py-10">
  <div class="flex flex-col justify-center items-center">
    <div class="w-full p-6 space-y-8 sm:p-8 bg-white rounded-lg shadow-xl dark:bg-gray-800">
      <% content_for :title, "Jobs" %>
      <div class="flex justify-between items-center">
        <h1 class="font-bold text-4xl">Jobs</h1>
        <%= link_to "New job", new_job_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
      </div>
      <div id="jobs" class="min-w-full">
        <div class="flex flex-wrap justify-center lg:justify-between basis-5/12">
          <% @jobs.each do |job| %>
            <%= render "jobcard", job: job, class: "flex" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
