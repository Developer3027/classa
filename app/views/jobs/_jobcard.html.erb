<div id="<%= dom_id job %>">
  <div class="max-w-md p-6 my-3 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-700 dark:border-gray-700">
    <h5 class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"><%= job.title %></h5>
    <p class="mb-3 font-normal text-gray-500 dark:text-gray-400"><%= job.pay_rate %></p>
    <p class="mb-3 font-normal text-gray-500 dark:text-gray-400"><%= job.enrollment_status %></p>
    <p class="mb-3 font-normal text-gray-500 dark:text-gray-400"><%= job.enrollment_location %></p>
    <% if current_user.present? %>
      <%= link_to "Show this job", job, class: "inline-flex font-medium items-center text-blue-400 hover:underline" %>
    <% else %>
      <%= link_to "Register to view this job", new_user_registration_path, class: "inline-flex font-medium items-center text-blue-400 hover:underline" %>
    <% end %>
  </div>
</div>
